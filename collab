#!/bin/bash
# agent-collab shell wrapper
# Put this in your PATH: ln -s /Volume/agent-collab/collab /usr/local/bin/collab

# Resolve the real path even if called via symlink
REAL_SCRIPT="$(readlink -f "${BASH_SOURCE[0]}" 2>/dev/null || realpath "${BASH_SOURCE[0]}" 2>/dev/null || echo "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(cd "$(dirname "$REAL_SCRIPT")" && pwd)"

if [ -n "${PYTHONPATH:-}" ]; then
    export PYTHONPATH="$SCRIPT_DIR:$PYTHONPATH"
else
    export PYTHONPATH="$SCRIPT_DIR"
fi

exec python3 -m agent_collab.cli "$@"
